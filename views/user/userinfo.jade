extends ../layout

block content
    - if (!user)
        p 
        a(href='login') Please Log in
    - if (user)
        p 
        h2.page-header Teacher Information
        p Name: #{user.name}
        p School: #{user.school}
        p Email: #{user.email}
        p Username: #{user.username}
        - if (usercourses)
            ul
             - each course in usercourses
                li Grade #{course.grade} #{course.subject}
        a(href='updateuserinfo') Change Info
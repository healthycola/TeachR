extends ../layout

block content
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js')
    form#formAddUser.themed.form-register(name="login",method="post",action="/login" ng-app)
        h2.page-header Login
        .form-group(
                ng-class="( login.username.$dirty ? (login.username.$valid ? 'has-success has-feedback' : 'has-error has-feedback' ) : ' ')")
            label(for='inputUserName') Username
            input#inputUserName.form-control(
                type="text", 
                placeholder="User Name", 
                name="username"
                ng-model='user.username'
                required)
            //Invalid
            <span ng-if="login.username.$invalid && login.username.$dirty" class="glyphicon glyphicon-remove form-control-feedback"></span>
            //Valid
            <p ng-show="login.username.$invalid && login.username.$dirty" class="bg-danger pad">Please enter a username.</p>
        .form-group(
                ng-class="( login.password.$dirty ? (login.password.$valid ? 'has-success has-feedback' : 'has-error has-feedback' ) : ' ')")
            label(for='inputUserPassword') Password
            input#inputUserPassword.form-control(
                type="password", 
                placeholder="Password", 
                name="password"
                ng-model='user.password'
                required)
            //Invalid
            <span ng-if="login.password.$invalid && login.password.$dirty" class="glyphicon glyphicon-remove form-control-feedback"></span>
            //Valid
            <p ng-show="login.password.$invalid && login.password.$dirty" class="bg-danger pad">Please enter your password</p>
        p
        button.btn.btn-lg.btn-primary.btn-block(
            type="submit"
            ng-disabled='login.$invalid') Log In